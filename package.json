{
  "name": "podpora-bot",
  "version": "1.0.0",
  "description": "Support bot v2",
  "author": "Marek L",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keram/podpora-bot"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint --silent && cp -r src/views/ dist/",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "test-full": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "build-ts-incremental": "tsc --incremental",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "lint-full": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
    "debug": "npm run build-ts-incremental && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^1.1.2",
    "@slack/events-api": "^3.0.1",
    "@slack/interactive-messages": "^2.0.2",
    "@slack/web-api": "^6.8.0",
    "async": "^3.2.4",
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "jira.js": "^2.15.16",
    "prom-client": "^14.1.1",
    "redis": "^4.5.1",
    "response-time": "^2.3.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@slack/types": "^2.8.0",
    "@types/async": "^3.2.16",
    "@types/response-time": "^2.3.5",
    "@types/chai": "^4.3.4",
    "@types/concurrently": "^7.0.0",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^8.4.10",
    "@types/express": "^4.17.15",
    "@types/express-serve-static-core": "^4.17.32",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/request-promise": "^4.1.48",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "chai": "^4.3.7",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-plugin-sonarjs": "^0.17.0",
    "jest": "^29.3.1",
    "nock": "^13.2.9",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.20",
    "shelljs": "^0.8.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
